<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Set.ExercisePage"
	xmlns:i18n="clr-namespace:Set.Localization;assembly=1Set"
	Title="{Binding Title}">

	<ContentPage.Padding>
	<OnPlatform x:TypeArguments="Thickness"
	            iOS="5, 20, 5, 0"
	            Android="5, 0, 5, 0"
	            WinPhone="5, 0, 5, 0" />
	</ContentPage.Padding>

	<ContentPage.Content>

	<StackLayout Orientation="Vertical" >
    	<Entry Placeholder="{i18n:Translate Title}" Text="{Binding Exercise.Title}" x:Name="titleEntry" />
    </StackLayout>

	</ContentPage.Content>
</ContentPage>
	 