<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Set.ExercisePage"
	xmlns:i18n="clr-namespace:Set.Localization;assembly=1Set"
	Title="{Binding Title}">

	<ContentPage.Padding>
	<OnPlatform x:TypeArguments="Thickness"
	            iOS="5, 20, 5, 0"
	            Android="5, 0, 5, 0"
	            WinPhone="5, 0, 5, 0" />
	</ContentPage.Padding>

	<ContentPage.Content>

    <StackLayout VerticalOptions="StartAndExpand" Orientation="Vertical">
      <Entry Placeholder="{i18n:Translate ExerciseName}" Text="{Binding Exercise.Name}"/>
      
      <Label Text="{i18n:Translate TrainingProgram}"/>
      
      <Label x:Name="MonLabel" />
      <Switch IsToggled="{Binding DoOnMon}" />
      
      <Label x:Name="TueLabel" />
      <Switch IsToggled="{Binding DoOnTue}" />
      
      <Label x:Name="WedLabel" />
      <Switch IsToggled="{Binding DoOnWed}" />
      
      <Label x:Name="ThuLabel" />
      <Switch IsToggled="{Binding DoOnThu}" />
      
      <Label x:Name="FriLabel" />
      <Switch IsToggled="{Binding DoOnFri}" />
      
      <Label x:Name="SatLabel" />
      <Switch IsToggled="{Binding DoOnSat}" />
      
      <Label x:Name="SunLabel" />
      <Switch IsToggled="{Binding DoOnSun}" />
    </StackLayout>


  </ContentPage.Content>
</ContentPage>
	 